<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bk_01">

	<SurfaceView android:id="@+id/surface"
		android:layout_marginTop="30dip" android:layout_width="300px"
		android:layout_height="320px" android:layout_gravity="center">
	</SurfaceView>
	<LinearLayout android:orientation="horizontal" android:layout_marginTop="15dip" 
		android:layout_width="fill_parent" android:layout_height="wrap_content" >
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="13651016256" android:id="@+id/phoneNum" android:textSize="20dip" android:gravity="center"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dip" >
		<ImageView android:id="@+id/speaker"  android:layout_marginLeft="20dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/speaker_off_normal"></ImageView>
		<ImageView android:id="@+id/square"  android:layout_marginLeft="40dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/square"></ImageView>
		<ImageView android:id="@+id/close" android:layout_width="wrap_content" android:layout_marginLeft="40dip"
			android:layout_height="wrap_content" android:src="@drawable/ic_menu_end_call"></ImageView>
	</LinearLayout>

</LinearLayout>
